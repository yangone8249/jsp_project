<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG"> <!-- debug 상태로 진행 -->
	<appenders>
		<console name="Console" target="SYSTEM_OUT"> <!-- system_out은 하단에 콘솔을 띄울것을 의미한다. -->
			<PetternLayout pettern="%d - %msh%n"></PetternLayout>
		</console>
	</appenders>
	<loggers>
		<root level="DEBUG"> <!-- root는 반드시 하나 있어야한다.
								root 레벨의 상태를 설정 -->
			<appenderRef ref="Console" /> <!-- 콘솔에 확인하겠다는 구문 -->
		</root>
	</loggers>
</Configuration>